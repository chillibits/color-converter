<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/buttonColorTransparent">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/buttonColorTransparent" />
            <corners android:radius="150dp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <selector>
            <item android:state_enabled="false">
                <shape>
                    <corners android:radius="150dp" />
                    <stroke android:color="@color/disabled" android:width="1.5dp" />
                </shape>
            </item>
            <item>
                <shape>
                    <corners android:radius="150dp" />
                    <stroke android:color="@color/buttonColor" android:width="1.5dp" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>